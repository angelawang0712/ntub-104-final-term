<h1>Money</h1>
<%= link_to '新增類別', sorts_path ,class:'btn btn-link btn-lg'%>|
<%= link_to '新增帳目', new_account_path ,class:'btn btn-link btn-lg'%>|
<%= link_to '預算規劃', budget_accounts_path ,class:'btn btn-link btn-lg'%> | 
<%= link_to '統計資料', statistic_accounts_path ,class:'btn btn-link btn-lg'%>
</br>

</br>
<%= form_tag accounts_path, method: :get do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search..." %>
    <%= submit_tag "搜尋", name: nil %>
<% end %>

<br/>
<br/>
<%= link_to '顯示全部', accounts_path ,class:'btn btn btn-info'%>
<br/>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>日期</th>
        <th>項目</th>
        <th>數量</th>
        <th>金額</th>
        <th>購賣商家</th>
        <th>購買類別</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
      <% @accounts.each do |account| %>
      <tr>
        <td><%= account.buy_date %></td>
        <td><%= link_to account.name ,account %></td>
        <td><%= account.num %></td>
        <td><%= account.buy_price %></td>
        <td><%= account.buy_store %></td>
        <td><%= account.sort.try(:title) %></td>
        
        <td><%= link_to 'Edit', edit_account_path(account) ,class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </table>