<p id="notice"><%= notice %></p>

<h1>預算</h1>
<%= link_to '返回預算規劃', budget_accounts_path ,class:'btn btn-link btn-lg'%>|
<%= link_to '新增預算', new_cost_path ,class:'btn btn-link btn-lg'%>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>預算名稱</th>
      <th>起始日</th>
      <th>結束日</th>
      <th>金額</th>
      <th>類別</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costs.each do |cost| %>
      <tr>
        <td><%= link_to cost.cost_name , cost %></td>
        <td><%= cost.start_time %></td>
        <td><%= cost.end_time %></td>
        <td><%= cost.cost_price %></td>
        <td><%= cost.sort.try(:title) %></td>
        <td><%= link_to 'Edit', edit_cost_path(cost) ,class:'btn btn-warning'%></td>
        <td><%= link_to 'Destroy', cost, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>