<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


 <div class="field">
    </br><%= f.input :email, label: 'Email：' , required: false, autofocus: true,:input_html => {:style=> 'width: 300px'} %></p>
    </br><%= f.input :password, label: 'Password：' , required: false,:input_html => {:style=> 'width: 300px'} %></p>
    </br><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>

    <%= f.button :submit, "Log in",class:'btn btn-info' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
